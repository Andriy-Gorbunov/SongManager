<Window x:Class="RadioEtherMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioEtherMonitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="517">
            <MenuItem Header="За_вантажити/оновити список радіостанцій з..." >
                <MenuItem Header="radio.i.ua" HorizontalAlignment="Left" Command="{x:Static local:CustomCommands.LoadRadiostationsList}" CommandParameter="RadioIUa" />
                <MenuItem Header="radioscope.in.ua" HorizontalAlignment="Left" Command="{x:Static local:CustomCommands.LoadRadiostationsList}" CommandParameter="RadioscopeInUa" />
                <Separator HorizontalAlignment="Left" />
                <MenuItem Header="_усіх перелічених агрегаторів" HorizontalAlignment="Left" Command="{x:Static local:CustomCommands.LoadRadiostationsList}" CommandParameter=""/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
